@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<div class="row">
    <div class="row">
        <section class="text-center col-md-4">
            
        </section>
        <section class="text-center col-md-4">
            <form id="account" method="post">

                <h1>Log in</h1>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
               
                <div class="form-floating mb-4">
                    <input asp-for="Input.LoginName" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.LoginName" class="form-label"></label>
                    <span asp-validation-for="Input.LoginName" class="text-danger"></span>
                </div>


                <div class="form-floating mb-4">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>


                <div>
                    <button id="login-submit" type="submit" class="btn btn-lg btn-primary mb-4 col-md-12">Log in</button>
                </div>

                <div>
                    <p>Passwort vergessen? Bitte Admin kontaktieren.</p>
                </div>

            </form>
        </section>
        <section class="text-center col-md-4">
           
        </section>

    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

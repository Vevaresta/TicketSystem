@page
@model MangeUsersModel
@inject SignInManager<TicketsystemUser> SignInManager

@{
    @using Ticketsystem.Areas.Identity.Services;
    @inject UserManager<TicketsystemUser> userManager;
    @inject CheckPermissionsService checkPermissionsService;
    TicketsystemUser loggedInUser = await userManager.GetUserAsync(User);
}

@{
    ViewData["Title"] = "Benutzer verwalten";
    ViewData["ActivePage"] = ManageNavPages.ManageUsers;
}

<div class="col-sm-12 col-md-12 col-lg-12 col-xl-8 col-xxl-8">
    <h3>@ViewData["Title"]</h3>
    <hr />
    <form method="post">
        @Html.AntiForgeryToken()

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Benutzer</th>
                    <th>Rolle</th>
                    <th class="text-end">Aktionen</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr class="align-middle">
                        <td>@user.User.UserName</td>
                        <td>@user.Role</td>
                        <td class="text-end text-nowrap">
                            @if (user.User.UserName != "admin")
                            {
                                @if (await checkPermissionsService.HasPermissionAsync(loggedInUser, PermissionsEnum.ChangeUserRole))
                                {
                                    <span>
                                        <button type="submit" class="btn btn-info text-nowrap" asp-page-handler="ChangeRole" asp-route-userId="@user.User.Id">
                                            Rolle ändern
                                        </button>
                                    </span>
                                }
                                @if (await checkPermissionsService.HasPermissionAsync(loggedInUser, PermissionsEnum.DeleteUsers))
                                {
                                    if (await checkPermissionsService.HasPermissionAsync(loggedInUser, PermissionsEnum.ChangeUserRole))
                                    {
                                        <span class="me-2"></span>
                                    }
                                    <span>
                                        <button type="submit" class="btn btn-info text-nowrap" asp-page-handler="Delete" asp-route-userId="@user.User.Id">
                                            Löschen
                                        </button>
                                    </span>
                                }
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        @if (await checkPermissionsService.HasPermissionAsync(loggedInUser, PermissionsEnum.AddUsers))
        {
            <button type="submit" class="btn btn-info text-nowrap" asp-page-handler="CreateUser">
                Neuer Benutzer
            </button>
        }
    </form>
</div>

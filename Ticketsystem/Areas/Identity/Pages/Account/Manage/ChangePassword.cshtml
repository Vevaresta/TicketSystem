@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Passwort ändern";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

@*<partial name="_StatusMessage" for="StatusMessage" />*@
<div class="col-sm-12 col-md-12 col-lg-8 col-xl-6 col-xxl-6">
    <h3>@ViewData["Title"]</h3>
    <hr />
    <form id="change-password-form" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row mb-2">
            <div class="form-group">
                <label asp-for="Input.OldPassword" class="control-label"></label>
                <input asp-for="Input.OldPassword" class="form-control" autocomplete="off" />
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-2">
            <div class="form-group">
                <label asp-for="Input.NewPassword" class="control-label"></label>
                <input asp-for="Input.NewPassword" class="form-control" autocomplete="off" />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-4">
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword" class="control-label"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="off" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>

        <button type="submit" class="w-100 btn btn-lg btn-primary">Speichern</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@page
@using Microsoft.EntityFrameworkCore;
@model ConfirmUserDeletionModel
@inject UserManager<TicketsystemUser> userManager
@inject RoleManager<EnhancedIdentityRole> roleManager

@{
    ViewData["ActivePage"] = ManageNavPages.ConfirmUserDeletion;
}

@{
    var user = await userManager.GetUserAsync(User);
    var roles = await userManager.GetRolesAsync(user);
    var permissions = new List<string>();
    if (roles.Any())
    {
        var role = await roleManager.Roles.Include(r => r.Permissions)
            .FirstOrDefaultAsync(r => r.Name == roles.First());
        if (role != null)
        {
            permissions.AddRange(role.Permissions.Select(p => p.Name));
        }
    }
    bool hasDeleteUsersPermission = permissions.Contains(PermissionsEnum.DeleteUsers.ToString());

}


<div class="col-sm-12 col-md-12 col-lg-8 col-xl-8 col-xxl-8">
    <h3>
        <span>Wollen Sie den Benutzer</span>
        <span style="font-weight: bold;"> @Model.UserToDelete.UserName</span>
        <span> wirklich löschen?</span>
    </h3>
    <hr />
    <form method="post">
        @Html.AntiForgeryToken()
        <span class="me-4">
            <button type="submit" class="btn btn-info" asp-page-handler="Confirm" asp-route-userId="@Model.UserToDelete.Id">
                Ja
            </button>
        </span>
        <span>
            <button type="submit" class="btn btn-info" asp-page-handler="Cancel">
                Nein
            </button>
        </span>
    </form>
</div>
@model List<TicketViewModel>

@{
    @inject UserManager<User> userManager;
    @inject IServiceFactory serviceFactory;

    var loggedInUser = await userManager.GetUserAsync(User);
    if (loggedInUser == null)
    {
        Context.Response.Redirect("PermissionError");
        return;
    }
    if (!await serviceFactory.GetRolePermissionsService().HasPermission(loggedInUser, RolePermissions.ViewHistory))
    {
        Context.Response.Redirect("PermissionError");
        return;
    }
}


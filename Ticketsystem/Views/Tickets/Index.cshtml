@model IEnumerable<Ticketsystem.Models.Ticket>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Tickets</h1>

<p>
    <a class="btn btn-lg btn-primary" asp-action="Create">Neues Ticket anlegen</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.WorkOrder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataBackupByClient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataBackupByStaff)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataBackupDone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comments)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TicketType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TicketStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.WorkOrder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataBackupByClient)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataBackupByStaff)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataBackupDone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comments)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TicketType.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TicketStatus.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

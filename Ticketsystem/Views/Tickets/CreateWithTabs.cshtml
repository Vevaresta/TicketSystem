@{
    ViewData["Title"] = "Tabs Example";
}

<div class="container">
    <h1>Tabs Example</h1>
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="tab1-tab" data-toggle="tab" href="#tab1" role="tab" aria-controls="tab1" aria-selected="true">Tab 1</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="tab2-tab" data-toggle="tab" href="#tab2" role="tab" aria-controls="tab2" aria-selected="false">Tab 2</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="tab3-tab" data-toggle="tab" href="#tab3" role="tab" aria-controls="tab3" aria-selected="false">Tab 3</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="tab4-tab" data-toggle="tab" href="#tab4" role="tab" aria-controls="tab4" aria-selected="false">Tab 4</a>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="tab1" role="tabpanel" aria-labelledby="tab1-tab">
            <div class="row">
                <div class="col-md-4">
                    <div class="row">
                        <div class="form-group">
                            <label for="input1-tab1">Input 1-1</label>
                            <input type="text" class="form-control" id="input1-tab1">
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <label for="input1-tab1-2">Input 1-2</label>
                            <input type="text" class="form-control" id="input1-tab1-2">
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <label for="input1-tab1-3">Input 1-3</label>
                            <input type="text" class="form-control" id="input1-tab1-3">
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="input2-tab1">Input 2</label>
                        <input type="text" class="form-control" id="input2-tab1">
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="input3-tab1">Input 3</label>
                        <input type="text" class="form-control" id="input3-tab1">
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="tab2" role="tabpanel" aria-labelledby="tab2-tab">
            <div class="row">
                <div class="col-md-4">
                    <div class="row">
                        <div class="form-group">
                            <label for="input1-tab2">Input 1-1</label>
                            <input type="text" class="form-control" id="input1-tab2">
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <label for="input1-tab2-2">Input 1-2</label>
                            <input type="text" class="form-control" id="input1-tab2-2">
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <label for="input1-tab2-3">Input 1-3</label>
                            <input type="text" class="form-control" id="input1-tab2-3">
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="input2-tab2">Input 2</label>
                        <input type="text" class="form-control" id="input2-tab2">
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="tab3" role="tabpanel" aria-labelledby="tab3-tab">
            <div class="row">
                <div class="col-md-4">
                    <div class="row">
                        <div class="form-group">
                            <label for="input1-tab2">Input 1-1</label>
                            <input type="text" class="form-control" id="input1-tab2">
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <label for="input1-tab2-2">Input 1-2</label>
                            <input type="text" class="form-control" id="input1-tab2-2">
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <label for="input1-tab2-3">Input 1-3</label>
                            <input type="text" class="form-control" id="input1-tab2-3">
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="input2-tab3">Input 2</label>
                        <input type="text" class="form-control" id="input2-tab3">
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="row">
                        <div class="form-group">
                            <label for="input3-tab3">Input 3-1</label>
                            <input type="text" class="form-control" id="input3-tab3">
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <label for="input3-tab3-2">Input 3-2</label>
                            <input type="text" class="form-control" id="input3-tab3-2">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="tab4" role="tabpanel" aria-labelledby="tab4-tab">
            <div class="row">
                <div class="col-md-4">
                    <div class="row">
                        <div class="form-group">
                            <label for="input1-tab4">Input 1-1</label>
                            <input type="text" class="form-control" id="input1-tab4">
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <label for="input1-tab4-2">Input 1-2</label>
                            <input type="text" class="form-control" id="input1-tab4-2">
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <label for="input1-tab4-3">Input 1-3</label>
                            <input type="text" class="form-control" id="input1-tab4-3">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
    {
    <script>
        $(function () {
            $('#myTab a').on('click', function (e) {
                e.preventDefault();
                $(this).tab('show');
            });

            $('#input1-tab1, #input1-tab2, #input1-tab3, #input1-tab4').on('input', function () {
                $('#input1-tab1, #input1-tab2, #input1-tab3, #input1-tab4').not(this).val($(this).val());
            });

            $('#input1-tab1-2, #input1-tab2-2, #input1-tab3-2, #input1-tab4-2').on('input', function () {
                $('#input1-tab1-2, #input1-tab2-2, #input1-tab3-2, #input1-tab4-2').not(this).val($(this).val());
            });

            $('#input1-tab1-3, #input1-tab2-3, #input1-tab3-3, #input1-tab4-3').on('input', function () {
                $('#input1-tab1-3, #input1-tab2-3, #input1-tab3-3, #input1-tab4-3').not(this).val($(this).val());
            });

            //$('#input2-tab1').on('input', function () {
            //    $('#input2-tab1, #input2-tab2').val($(this).val());
            //});

            //$('#input3-tab1').on('input', function () {
            //    $('#input3-tab1, #input3-tab2').val($(this).val());
            //});
        });
    </script>
}

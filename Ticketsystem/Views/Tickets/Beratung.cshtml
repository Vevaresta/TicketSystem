@model Ticketsystem.Models.Ticket

@{
    ViewData["Title"] = "Beratung";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Ticket anlegen</h1>

<h4>Beratung</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Beratung">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h5>Kunden Daten:</h5>
            <div class="form-group">
                <label class="control-label">Name</label>
                <input class="form-control" />
                @*<span asp-validation-for="Id" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label class="control-label">Vorname</label>
                <input class="form-control" />
                @*<span asp-validation-for="Id" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label class="control-label">Reha Nummer</label>
                <input class="form-control" />
                @*<span asp-validation-for="Id" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label class="control-label">Kurs Nummer</label>
                <input class="form-control" />
                @*<span asp-validation-for="Id" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label class="control-label">Straße</label>
                <input class="form-control" />
                @*<span asp-validation-for="Id" class="text-danger"></span>*@
            </div>
            <div class="row">
                 <div class="col-md-6">
                    <label class="control-label">Hausnummer</label>
                    <input class="form-control" />
                    @*<span asp-validation-for="Id" class="text-danger"></span>*@
                </div>
                <div class="col-md-6">
                    <label class="control-label">PLZ</label>
                    <input class="form-control" />
                    @*<span asp-validation-for="Id" class="text-danger"></span>*@
                </div>
            </div>
            <div class="form-group">
                <label class="control-label">Wohnort</label>
                <input class="form-control" />
                @*<span asp-validation-for="Id" class="text-danger"></span>*@
            </div>
            <div class="row">
                 <div class="col-md-6">
                    <label class="control-label">Telefonnummer</label>
                    <input class="form-control" />
                    @*<span asp-validation-for="Id" class="text-danger"></span>*@
                </div>
                <div class="col-md-6">
                    <label class="control-label">E-Mail Adresse</label>
                    <input class="form-control" />
                    @*<span asp-validation-for="Id" class="text-danger"></span>*@
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <form asp-action="Beratung">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h5>Fragestellung des Kunden:</h5>
            <div class="form-group">
                    <label for="exampleTextarea" class="control-label">Frage oder Problem</label>
                    <textarea class="form-control" id="exampleTextarea" rows="6"></textarea>
            </div>
            <div class="form-group">
                    <label for="exampleTextarea" class="control-label">Empfehlung</label>
                    <textarea class="form-control" id="exampleTextarea" rows="6"></textarea>
            </div>
        </form>
    </div>
     <div class="col-md-4">
        <form asp-action="Beratung">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h5>Anmerkungen:</h5>
            <div class="form-group">
                    <label for="exampleTextarea" class="control-label">Notizen</label>
                    <textarea class="form-control" id="exampleTextarea" rows="6"></textarea>
            </div>
             <fieldset class="form-group">
                <legend class="mt-3">Weiterer Auftrag entstanden?</legend>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="optionsRadios" id="optionsRadios1" value="option1" checked="">
                        <label class="form-check-label" for="optionsRadios1">Ja</label>                       
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="optionsRadios" id="optionsRadios2" value="option2">
                        <label class="form-check-label" for="optionsRadios2">Nein</label>
                    </div>
            </fieldset>
        </form>
    </div>
</div>

<div class="form-group" style="margin-top: 20px">
    <div class="form-group">
                <input type="submit" value="Speichern" class="btn btn-lg btn-primary" />
    </div>
    <div>
                <a asp-action="Index">Zurück zur Übersicht</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

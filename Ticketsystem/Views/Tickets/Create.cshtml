@using Ticketsystem.ViewModels;
@model TicketViewModel

@{
    ViewData["Title"] = "Neues TicketViewModel";
}

<div class="container">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <h3>Neues Ticket</h3>
        <div class="row ms-lg-2">
            <fieldset class="form-group col-md-5 mb-3">
                <div class="row">
                    <div class="col-md-3 form-check">
                        <input class="form-check-input radio-ticket-type" type="radio" name="ticket-type" value="Reparatur" checked>
                        <label class="form-check-label">Reparatur</label>
                    </div>
                    <div class="col-md-3 form-check">
                        <input class="form-check-input radio-ticket-type" type="radio" name="ticket-type" value="Datenrettung">
                        <label class="form-check-label">Datenrettung</label>
                    </div>
                    <div class="col-md-3 form-check">
                        <input class="form-check-input radio-ticket-type" type="radio" name="ticket-type" value="Beratung">
                        <label class="form-check-label">Beratung</label>
                    </div>
                    <div class="col-md-3 form-check">
                        <input class="form-check-input radio-ticket-type" type="radio" name="ticket-type" value="Auftrag">
                        <label class="form-check-label">Auftrag</label>
                    </div>
                </div>
            </fieldset>
        </div>
        <ul class="nav nav-tabs" id="tabs" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="tab1-tab" data-toggle="tab" href="#tab1" role="tab" aria-controls="tab1" aria-selected="true">Ticket</a>
            </li>
            <li class="nav-item" id="geraetetab" style="display: none;">
                <a class="nav-link" id="tab2-tab" data-toggle="tab" href="#tab2" role="tab" aria-controls="tab2" aria-selected="false">Geräte</a>
            </li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane fade show active" id="tab1" role="tabpanel" aria-labelledby="tab1-tab">
                <div class="row mt-2 mb-3">
                    <div class="col-md-4">
                        <h5>Auftraggeber</h5>
                        <div class="row mb-1">
                            <div class="form-group">
                                <label asp-for="Client.LastName" class="control-label">Nachname</label>
                                <input asp-for="Client.LastName" class="form-control lastname" />
                                @*<span asp-validation-for="Id" class="text-danger"></span>*@
                            </div>
                        </div>
                        <div class="row mb-1">
                            <div class="form-group">
                                <label asp-for="Client.FirstName" class="control-label">Vorname</label>
                                <input asp-for="Client.FirstName" class="form-control firstname" />
                                @*<span asp-validation-for="Id" class="text-danger"></span>*@
                            </div>
                        </div>
                        <div class="row mb-1">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Client.RehaNumber" class="control-label">Reha Nummer</label>
                                    <input asp-for="Client.RehaNumber" class="form-control rehanumber" />
                                    @*<span asp-validation-for="Id" class="text-danger"></span>*@
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Client.Course" class="control-label">Kurs Nummer</label>
                                    <input asp-for="Client.Course" class="form-control coursenumber" />
                                    @*<span asp-validation-for="Id" class="text-danger"></span>*@
                                </div>
                            </div>
                        </div>
                        <div class="row mb-1">
                            <div class="form-group">
                                <label asp-for="Client.StreetAndHouseNumber" class="control-label">Straße und Hausnummer</label>
                                <input asp-for="Client.StreetAndHouseNumber" class="form-control street" />
                                @*<span asp-validation-for="Id" class="text-danger"></span>*@
                            </div>
                        </div>
                        <div class="row mb-1">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Client.PostalCode" class="control-label">PLZ</label>
                                    <input asp-for="Client.PostalCode" class="form-control postalcode" />
                                    @*<span asp-validation-for="Id" class="text-danger"></span>*@
                                </div>
                            </div>
                            <div class="col-md-8">
                                <div class="form-group">
                                    <label asp-for="Client.City" class="control-label">Wohnort</label>
                                    <input asp-for="Client.City" class="form-control city" />
                                    @*<span asp-validation-for="Id" class="text-danger"></span>*@
                                </div>
                            </div>
                        </div>
                        <div class="row mb-1">
                            <div class="form-group">
                                <label asp-for="Client.Email" class="control-label">E-Mail Adresse</label>
                                <input asp-for="Client.Email" class="form-control email" />
                                @*<span asp-validation-for="Id" class="text-danger"></span>*@
                            </div>
                        </div>
                        <div class="row mb-1">
                            <div class="form-group">
                                <label asp-for="Client.PhoneNumber" class="control-label">Telefonnummer</label>
                                <input asp-for="Client.PhoneNumber" class="form-control phonenumber" />
                                @*<span asp-validation-for="Id" class="text-danger"></span>*@
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <h5>Aufgaben</h5>
                        <div class="row mb-1">
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-4">
                            <div class="form-group">
                                <label asp-for="WorkOrder" class="control-label"></label>
                                <textarea asp-for="WorkOrder" class="form-control" id="exampleTextarea" rows="8"></textarea>
                                <span asp-validation-for="WorkOrder" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-2" id="backup">
                            <div class="d-flex align-items-center">
                                <h5 class="me-4">Datensicherung?</h5>
                                <div class="form-check form-switch pb-2">
                                    <input class="form-check-input" type="checkbox" id="switch-backup">
                                </div>
                            </div>
                            <fieldset class="form-group" id="backup-choices" style="display: none;">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="optionsRadios" id="optionsRadios1" value="option1" checked="">
                                    <label class="form-check-label" for="optionsRadios1">Durch Auftraggeber</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="optionsRadios" id="optionsRadios2" value="option2">
                                    <label class="form-check-label" for="optionsRadios2">Durch Mitarbeiter</label>
                                </div>
                            </fieldset>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="row" id="einzelgeraet">
                            <h5>Gerät</h5>
                            <div class="row">
                                <div class="row mb-1">
                                    <div class="form-group">
                                        <label class="control-label">Bezeichnung</label>
                                        <input class="form-control" id="input-device-name" />
                                        @*<span asp-validation-for="Id" class="text-danger"></span>*@
                                    </div>
                                </div>
                                <div class="row mb-1">
                                    <div class="form-group">
                                        <label class="control-label">Produktart</label>
                                        <input class="form-control" id="input-device-type" />
                                        @*<span asp-validation-for="Id" class="text-danger"></span>*@
                                    </div>
                                </div>
                                <div class="row mb-1">
                                    <div class="form-group">
                                        <label class="control-label">Hersteller</label>
                                        <input class="form-control" id="input-device-manufacturer" />
                                        @*<span asp-validation-for="Id" class="text-danger"></span>*@
                                    </div>
                                </div>
                                <div class="row mb-1">
                                    <div class="form-group">
                                        <label class="control-label">Seriennummer</label>
                                        <input class="form-control" id="input-device-serialnumber" />
                                        @*<span asp-validation-for="Id" class="text-danger"></span>*@
                                    </div>
                                </div>
                                <div class="row mb-1">
                                    <div class="form-group">
                                        <label class="control-label">Zubehör</label>
                                        <input class="form-control" id="input-device-accessories" />
                                        @*<span asp-validation-for="Id" class="text-danger"></span>*@
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group">
                                        <label for="exampleTextarea" class="control-label">Notizen</label>
                                        <textarea class="form-control" id="input-device-comments" rows="3"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <input type="hidden" id="ticketTypeInput" name="ticketType" />
                <input type="hidden" id="deviceListInput" name="deviceList" />
                <div class="row">
                    <div class="col-md-6">
                        <input type="submit" value="Speichern" class="btn btn-lg btn-primary mb-2" id="button-main-save-ticket" asp-action="Create" />
                        <div>
                            <a asp-action="Index" id="link-main-back">Zurück zur Übersicht</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="tab2" role="tabpanel" aria-labelledby="tab2-tab">
                <div class="row mt-2">
                    <div class="col-md-4">
                        <div class="row">
                            <h5>Geräteliste</h5>
                            <div class="row mb-4">
                                <div class="list-group bg-light" id="device-listbox" style="height: 400px; overflow-y: scroll;">
                                    @*<button type="button" class="list-group-item list-group-item-action device-listbox-item">Eintrag 1</button>*@
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12 text-start">
                                    <button type="button" class="btn btn-primary me-2" id="button-add-device">Hinzufügen</button>
                                    <button type="button" class="btn btn-primary me-2" id="button-edit-device">Bearbeiten</button>
                                    <button type="button" class="btn btn-primary" id="button-delete-device">Löschen</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="row" id="add-device" style="display: none;">
                            <h5>Gerät</h5>
                            <div class="row mb-1">
                                <div class="form-group">
                                    <label class="control-label">Bezeichnung</label>
                                    <input class="form-control" id="input-devices-name" />
                                    @*<span asp-validation-for="Id" class="text-danger"></span>*@
                                </div>
                            </div>
                            <div class="row mb-1">
                                <div class="form-group">
                                    <label class="control-label">Produktart</label>
                                    <input class="form-control" id="input-devices-type" />
                                    @*<span asp-validation-for="Id" class="text-danger"></span>*@
                                </div>
                            </div>
                            <div class="row mb-1">
                                <div class="form-group">
                                    <label class="control-label">Hersteller</label>
                                    <input class="form-control" id="input-devices-manufacturer" />
                                    @*<span asp-validation-for="Id" class="text-danger"></span>*@
                                </div>
                            </div>
                            <div class="row mb-1">
                                <div class="form-group">
                                    <label class="control-label">Seriennummer</label>
                                    <input class="form-control" id="input-devices-serialnumber" />
                                    @*<span asp-validation-for="Id" class="text-danger"></span>*@
                                </div>
                            </div>
                            <div class="row mb-1">
                                <div class="form-group">
                                    <label class="control-label">Zubehör</label>
                                    <input class="form-control" id="input-devices-accessories" />
                                    @*<span asp-validation-for="Id" class="text-danger"></span>*@
                                </div>
                            </div>
                            <div class="row mb-4">
                                <div class="form-group">
                                    <label for="exampleTextarea" class="control-label">Notizen</label>
                                    <textarea class="form-control" id="input-devices-comments" rows="3"></textarea>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12 text-start">
                                    <button type="button" class="btn btn-primary me-2" id="button-devices-save">Speichern</button>
                                    <button type="button" class="btn btn-primary me-2 collapse" id="button-devices-edit">Ändern</button>
                                    <button type ="button" class="btn btn-primary me-2" id="button-devices-cancel">Abbrechen</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="row mb-4" id="software-list" style="display: none;">
                            <h5>Softwareliste</h5>
                            <div class="row mb-4">
                                <div class="list-group bg-light" id="software-listbox" style="height: 130px; overflow-y: scroll;">
                                    @*<button type="button" class="list-group-item list-group-item-action">Eintrag 1</button>*@
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12 text-start">
                                    <button type="button" class="btn btn-primary me-2" id="button-add-software">Hinzufügen</button>
                                    <button type="button" class="btn btn-primary me-2" id="button-edit-software">Bearbeiten</button>
                                    <button type="button" class="btn btn-primary" id="button-delete-software">Löschen</button>
                                </div>
                            </div>
                        </div>
                        <div class="row" id="add-software" style="display: none;">
                            <h5>Software</h5>
                            <div class="row mb-1">
                                <div class="form-group">
                                    <label class="control-label">Bezeichnung</label>
                                    <input class="form-control" id="input-software-name" />
                                    @*<span asp-validation-for="Id" class="text-danger"></span>*@
                                </div>
                            </div>
                            <div class="row mb-4">
                                <div class="form-group">
                                    <label for="exampleTextarea" class="control-label">Notizen</label>
                                    <textarea class="form-control" id="input-software-comments" rows="3"></textarea>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12 text-start">
                                    <button type="button" class="btn btn-primary me-2" id="button-software-save">Speichern</button>
                                    <button type="button" class="btn btn-primary me-2" id="button-software-cancel">Abbrechen</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script type="module" src="~/js/createticket/ticket_tab.js"></script>
    }

@using Microsoft.AspNetCore.Identity
@using Ticketsystem.Models;

@inject SignInManager<User> signInManager
@inject UserManager<User> userManager

@{
    User loggedInUser = await userManager.GetUserAsync(User);
}

<ul class="navbar-nav">
    @if (signInManager.IsSignedIn(User) && loggedInUser != null)
    {
        <li class="nav-item">
            <span class="nav-link text-dark fw-bold me-2">Hallo @loggedInUser.FirstName @loggedInUser.LastName</span>
        </li>
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark me-1" asp-area="Identity" asp-page="/Account/Manage/Index">Einstellungen</a>
        </li>
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Logout">Logout</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
